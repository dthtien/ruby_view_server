<%
  def link_to(name, url)
      "<a href='#{url}' >#{name}</a>"
   end 
 %>
<html>
  <body>
    <h1>You're using a layout</h1>
    <p>
      <h3> I'm a header</h3>
      <p>Put things in the header</p>
      <%= link_to "Me", "me.html"  %>
      <%= link_to "Hello", "hello.html" %>
    </p>
    <hr />
    <div>
      <%= yield %>
      <form method='post' action="<%= @request.path %>">
          First name: <input type="text" name="first_name" placeholder='first name'/><br />
          Last name: 
          <input type="text" name="last_name">
          <br>
          <input type="submit" value="Submit" name="submit" />
      </form>
      <% if @request.query['submit'] %>
        Hello there <%= "#{@request.query['first_name']} #{@request.query['last_name']}" %>
      <% else %>
        Enter thy name
      <% end %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <%= link_to "Facebook", "https://fb.com/dthtien" %>
    </div>
  </body>
</html>